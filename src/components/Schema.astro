---
import clientData from '@data/client.json';

const pathname = Astro.url.pathname;
const lang = pathname.startsWith('/en/') || pathname === '/en' ? 'en' : 'de';
const schema = clientData.schema?.[lang] || clientData.schema.de;
---

{schema?.business && (
	<script type="application/ld+json" set:html={JSON.stringify(schema.business)} />
)}

{schema?.website && (
	<script type="application/ld+json" set:html={JSON.stringify(schema.website)} />
)}